#--------------------------- Simulation variables -----------------------------#
  variable         t_eq   equal 10000    # Equilibration time [ts].
  variable         t      equal 10000    # Simulation time [ts].
  variable         dt     equal 0.002    # Timestep [ps].
  variable         dt_t   equal 100      # Thermo information stride [ts].
  variable         dt_d   equal 1000     # Dump output stride [ts].
  variable         T0     equal 0.92     # System intial temperature [epsilon].
  variable         P      equal 5.68     # System pressure.
  variable         damp_T equal 1.0      # Thermostat damping [ps].
  variable         damp_P equal 1.0      # Barostat damping [ps].
  variable         nx     equal 6        # System size.
  variable         ny     equal 4        # System size.
  variable         nz     equal 4        # System size.

  # Initalizes random number generator.
  variable         rnd equal round(random(0,999999,${RANDOM}))
#------------------------------------------------------------------------------#


#---------------------------- Atomic setup ------------------------------------#
  units            lj # lennard-jones
  timestep         ${dt}

  # Create atoms.
  variable         a equal 1.05 
  lattice          fcc ${a}
  region           sim_box block 0 ${nx} 0 ${ny} 0 ${nz}
  create_box       1 sim_box
  create_atoms     1 box
  lattice          fcc ${a} origin 0 0 $(3/8)
  create_atoms     1 box

  # Interatomic potential information.
  pair_style       sw
  pair_coeff       * * mW.sw mW
  neigh_modify     delay 0
  mass             1 864
#------------------------------------------------------------------------------#


#--------------------------- Output setup -------------------------------------#
  thermo_style     custom step temp press
  thermo           1000

  fix              f1 all print ${dt_t} "$(time) $(temp) $(press)" &
                   title "# t [ps] T [K] P [bar]" &
                   screen no file thermo_${T}K.dat
#------------------------------------------------------------------------------#


#----------------------------- Run simulation ---------------------------------#
  # Equilibrate system (temperature and pressure).
  velocity         all create ${T0} ${rnd} dist gaussian
  fix              f2 all nph iso ${P} ${P} ${damp_P}
  variable         rnd equal round(random(0,999999,0)) # Generates new rnd #.
  fix              f3 all temp/csvr ${T} ${T} ${damp_T} ${rnd}
  run              ${t_eq}

  # Run simulation.
  dump             d1 all custom ${dt_d} dump_fcc/dump_${T}K_*.dat &
                   id type x y z
  run              ${t}
#------------------------------------------------------------------------------#
